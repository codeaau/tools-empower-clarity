{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "Event Record Schema",
  "type": "object",
  "properties": {
    "id": { "type": "string" },
    "type": { "type": "string" },
    "creation": { "type": "string" },
    "location": {
      "type": "object",
      "properties": {
        "tzName": { "type": "string" },
        "abbreviation": { "type": "string" },
        "continent": { "type": "string" },
        "country": { "type": "string" },
        "city": { "type": "string" },
        "dateTime": { "type": "string" }
      },
      "required": ["tzName", "abbreviation", "continent", "country", "city", "dateTime"]
    }
  },
  "required": ["id", "type", "creation", "location"]
}
