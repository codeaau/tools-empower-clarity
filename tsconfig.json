{
  "compilerOptions": {
    "target": "ES2020",
    "module": "NodeNext",
    "moduleResolution": "NodeNext",
    "rootDir": ".",
    "outDir": "dist",
    "strict": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "skipLibCheck": true,
    "declaration": true,
    "declarationDir": "dist/types",
    "composite": false,
    "emitDeclarationOnly": false,
    "noEmit": false,
    "allowImportingTsExtensions": false
  },
  "include": [
    "cli",
    "src",
    "trueData/src",
    "reference-manager (RefMan)/src",
    "Session Continuity Tracker (SCT)/src",
    "utils",
  ]
}
